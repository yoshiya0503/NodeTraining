extends layout

block content
    h1 書籍詳細情報
    div
        div ISBN: #{book.isbn}
        div 書籍名: #{book.name}
        div 著者: #{book.author}
        div タグ: #{book.tag}
        div 値段: #{book.price}
        div 購入日: #{book.purchase_date}
        div 読了日: #{book.finish_date}
        div コメント: #{book.comment}
        div
            table
                tr
                    form(method='get',action='/index.html')
                        input(type='hidden',name='name', value=book.name)
                        input(type='submit', value='戻る')
                    form(action='/book/modify.html?name=',method='get')
                        input(type='hidden',name='name', value=book.name)
                        input(type='submit', value='変更')
                    form(action='/book/delete_result.html',method='post')
                        input(type='hidden',name='isbn', value=book.isbn)
                        input(type='submit', value='削除', onClick='confirm("削除していいですか？")')

